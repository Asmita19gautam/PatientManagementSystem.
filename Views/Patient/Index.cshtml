@model List<Patient>

@{
    ViewData["Title"] = "List of Patient";
}


    <nav class="navbar navbar-light bg-light">
        <div class="col-md-10 align-content-lg-start" style="text-align: left;">
            <h1>Patient</h1>
        </div>
        @*<a class="nav-link" asp-controller="Patient" asp-action="index">List</a>*@
        <a class="nav-link" asp-controller="Patient" asp-action="create">Add</a>
    </nav>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>AlternateContactNumber</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var data in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@data.Name</td>
                        <td>@data.Age</td>
                        <td>@data.Email</td>
                        <td>@data.Phone</td>
                        <td>@data.AlternateContactNumber</td>
                        <td>
                            <a asp-controller="Patient" asp-action="Edit" class="btn btn-outline-info btn-sm" asp-route-Id="@data.PatientID">Edit</a>
                            <a asp-controller="Patient" asp-action="Details" class="btn btn-outline-secondary btn-sm" asp-route-Id="@data.PatientID">Details</a>
                            <a asp-controller="Patient" asp-action="Delete" class="btn btn-outline-danger btn-sm" asp-route-Id="@data.PatientID">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
